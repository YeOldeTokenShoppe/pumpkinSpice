rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to audio files for all users
    match /audio/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow users to upload and read candle images
    match /candles/{allPaths=**} {
      allow read: if true;
      allow write: if true;
      // For production, you might want to add:
      // allow write: if request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // Keep other paths restricted by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
  }
}
